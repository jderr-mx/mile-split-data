<div class="flex flex-col justify-center">
  <div class="flex justify-center mb-8">
    <button
      type="button"
      class="border p-2 rounded-s-lg hover:bg-indigo-400 w-20 text-sm drop-shadow-lg active:bg-indigo-300
        {{this.athleteSelected}}"
      dir="ltr"
      {{on "click" (fn this.selectSearchType "Athlete")}}
    >Athlete</button>
    <button
      type="button"
      class="border border-l-0 p-2 rounded-s-lg hover:bg-indigo-400 w-20 text-sm drop-shadow-lg active:bg-indigo-300
        {{this.teamSelected}}"
      dir="rtl"
      {{on "click" (fn this.selectSearchType "Team")}}
    >Team</button>
  </div>
  <div class="flex justify-center">
    <div class="flex items-center">
      <div class="inline-block relative">
        <label class="sr-only" for="search-box">Search Box</label>
        <Input
          id="search-box"
          @type="text"
          class="border-0 ring-1 rounded-lg text-sm p-2"
          placeholder="Search Text"
          @value={{this.searchTerm}}
        />
        {{#if this.results}}
          <ul
            class="rounded-lg bg-gray-50 absolute w-full drop-shadow-md mt-1 overflow-hidden"
          >
            {{#each this.results as |item|}}
              <li
                class="text-xs p-2 border-b hover:bg-gray-200 last-of-type:border-0"
              >
                <LinkTo @route="athlete" @model={{item.id}}>{{item.text}}</LinkTo>
              </li>
            {{/each}}
          </ul>
        {{/if}}
      </div>
      <button
        type="button"
        class="ml-2 py-2 px-3 text-sm rounded-lg border drop-shadow-md hover:bg-indigo-400 active:bg-indigo-300 bg-indigo-500"
        {{on "click" this.doSearch}}
      >{{svg-jar "magnifying-glass" class="h-5 text-indigo-50"}}</button>
    </div>
  </div>
</div>