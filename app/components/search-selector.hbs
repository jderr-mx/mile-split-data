<div class="flex flex-col justify-center p-2">
  <div class="flex justify-center mb-2">
    <button type="button" class="border p-2 rounded-s-lg hover:bg-indigo-100 w-20 text-sm {{this.athleteSelected}}" dir="ltr" {{on "click" (fn this.selectSearchType "Athlete")}}>Athlete</button>
    <button type="button" class="border border-l-0 p-2 rounded-s-lg hover:bg-indigo-100 w-20 text-sm {{this.teamSelected}}" dir="rtl" {{on "click" (fn this.selectSearchType "Team")}}>Team</button>
  </div>
  <div class="flex justify-center">
    <div>
    <Input @type="text" class="border" @value={{this.searchTerm}}/>
    <button type="button" class="ml-2" {{on "click" this.doSearch}}>{{svg-jar "magnifying-glass" class="h-4 w-4 text-gray-500 hover:text-indigo-700"}}</button>
    <ul class="p-2 rounded-lg bg-gray-100">
      <li>Foo</li>
      <li>Bar</li>
      <li>Baz</li>
    </ul>
</div>  </div>
</div>
