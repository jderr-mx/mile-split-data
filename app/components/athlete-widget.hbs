<div class="flex flex-col justify-center lg:flex-row p-4">
  <div class="basis-1/2 p-4 h-full">
    <AthleteSummary
      @athlete={{@athlete}}
      @setEventCode={{this.setEventCode}}
      @selectedEvent={{this.eventCode}}
    />
  </div>
  <div class="basis-1/2 p-4 h-full">
    <EventProgression
      @eventData={{this.eventData}}
      @eventCode={{this.eventCode}}
      @athlete={{@athlete}}
    />
    <div class="flex">
      <div class="border w-full rounded-lg shadow-lg overflow-auto">
        {{#each this.eventData as |event|}}
          <div class="flex justify-between text-sm border-b p-4 last-of-type:border-0">{{event.name}}
            <div class="text-gray-500">{{event.meetName}}
            </div>
            <div class="text-gray-700 text-right">
              {{event.mark}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>